                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "knowledge"
                ],
                "summary": "Get knowledge list",
                "parameters": [
                    {
                        "type": "integer",
                        "default": 1,
                        "description": "Page number",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 10,
                        "description": "Page size",
                        "name": "page_size",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/ai-knowledge-app_pkg_utils.PaginationResponse"
                        }
                    }
                }
            },
            "post": {
                "description": "创建新的知识条目，支持分类和标签",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "knowledge"
                ],
                "summary": "创建新的知识条目",
                "parameters": [
                    {
                        "description": "创建知识请求",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
