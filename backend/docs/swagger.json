            "get": {
                "description": "根据ID获取知识条目详情",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "knowledge"
                ],
                "summary": "获取单个知识条目",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "知识ID",
                        "name": "id",
