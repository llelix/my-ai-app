# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost
GIN_MODE=debug

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./data/app.db
# For PostgreSQL production:
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=password
# DB_NAME=ai_knowledge_db

# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key_here
